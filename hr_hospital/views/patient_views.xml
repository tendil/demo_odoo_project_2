<odoo>
    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">patient.tree</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="doctor_id"/>
            </tree>
        </field>
    </record>

    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">patient.form</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="doctor_id"/>
                    <field name="disease_ids"/>
                    <field name="visit_ids"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_patient_filter" model="ir.ui.view">
        <field name="name">patient.filter</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="doctor_id"/>
                <field name="gender"/>
                <filter name="male_filter" string="Male" domain="[('gender', '=', 'male')]"/>
                <filter name="female_filter" string="Female" domain="[('gender', '=', 'female')]"/>
            </search>
        </field>
    </record>

    <record id="action_reassign_doctor" model="ir.actions.server">
        <field name="name">Reassign Doctor</field>
        <field name="model_id" ref="hr_hospital.model_hr_hospital_patient"/>
        <field name="state">code</field>
        <field name="code">
            action = {
                'type': 'ir.actions.act_window',
                'res_model': 'hr_hospital.reassign_doctor_wizard',
                'view_mode': 'form',
                'target': 'new',
                'context': {'default_patient_ids': env.context.get('active_ids')},
            }
        </field>
    </record>

    <record id="view_patient_tree_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hr_hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_patient_filter"/>
    </record>
</odoo>
